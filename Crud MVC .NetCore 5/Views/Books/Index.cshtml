@model IEnumerable<Crud_MVC_.NetCore_5.Models.Book>

@{
    ViewData["Title"] = "Lista de libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if(TempData["message"] != null)
     {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
     }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de libros</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Books">Agregar libro</a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
         {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Id)</td>
                        <td>@Html.DisplayNameFor(m => m.Title)</td>
                        <td>@Html.DisplayNameFor(m => m.Description)</td>
                        <td>@Html.DisplayNameFor(m => m.PublicDate)</td>
                        <td>@Html.DisplayNameFor(m => m.Author)</td>
                        <td>@Html.DisplayNameFor(m => m.Price)</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach( var item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.PublicDate</td>
                        <td>@item.Author</td>
                        <td>@item.Price</td>
                        <td>
                            <a asp-controller="Books" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar libro</a>
                            <a asp-controller="Books" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar libro</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
         }
         else
         {
            <p>No existen registros</p>
         }
    </div>

</div>

